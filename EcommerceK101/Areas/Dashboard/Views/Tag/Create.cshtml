@model Tag

@if (@ViewBag.tagExist != null)
{
    <div class="col-lg-6 m-auto mb-5">
        <div class="alert alert-danger shadow" role="alert">
            @ViewBag.tagExist
        </div>
    </div>
}
<div class="col-lg-6 m-auto">
    <div class="card shadow p-3 mb-4">
        <form method="post" asp-controller="Tag" asp-action="Create">
            <div class="form-group">
                <label asp-for="Name">Category name</label>
                <input id="Tag" class="form-control" type="text" asp-for="Name" />
            </div>
            <div class="form-group">
                <input class="btn btn-outline-success btn-sm" type="submit" value="Submit" />
            </div>
        </form>
    </div>
</div>