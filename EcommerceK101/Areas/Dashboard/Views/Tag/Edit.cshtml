@model Tag

@if (@ViewBag.TagExist != null)
{
    <div class="col-lg-6 m-auto mb-5">
        <div class="alert alert-danger shadow" role="alert">
            @ViewBag.TagExist
        </div>
    </div>
}

<div class="col-lg-6 m-auto">
    <div class="card shadow p-3 mb-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Name">Tag name</label>
                <input id="Tag" class="form-control" type="text" asp-for="Name" />
            </div>
            <div class="form-group">
                <input class="btn btn-outline-warning btn-sm" type="submit" value="Update" />
            </div>
        </form>
    </div>
</div>