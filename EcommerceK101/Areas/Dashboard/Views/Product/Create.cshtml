@model EcommerceK101.Models.Product
<div class="container-fluid m-auto">
    <h4 class="text-center m-5">Create Product </h4>
</div>
<div class="col-lg-6 m-auto">
    <form class="row g-3" asp-action="Create" asp-controller="Product" method="post" enctype="multipart/form-data">

        <div class="col-md-6">
            <label asp-for="Name" class="form-label">Name</label>
            <input class="form-control" asp-for="Name">
        </div>
        @*<div class="form-group">
            <input type="file" class="form-control" name="Photo" />
        </div>*@
        <div class="col-md-6">
            <label asp-for="Discount" class="form-label">Discount</label>
            <input type="text" class="form-control" asp-for="Discount">
        </div>
        <div class="col-12">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control">
        </textarea>
        </div>
        <div class="col-12">
            <label asp-for="Price" class="form-label">Price</label>
            <input type="text" asp-for="Price" class="form-control">
        </div>
        @*  <div class="col-md-6">
        <label for="inputCity" class="form-label">City</label>
        <input type="text" class="form-control" id="inputCity">
        </div>*@
        <div class="col-md-2">
            <input type="file" class="form-control" name="Photo" />
        </div>

        <div class="col-md-4">
            <label asp-for="CategoryId" class="form-label">Category</label>
            <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-select">
                <option value="">Sec</option>
            </select>
        </div>
        <div class="col-md-2">
            <label asp-for="Quantity" class="form-label">Quantity</label>
            <input type="text" class="form-control" asp-for="Quantity">
        </div>
        

        @* <div class="col-12">
        <label asp-for="Quantity" class="form-label">Quantity</label>
        <input type="text" class="form-control" asp-for="Quantity">
        </div>*@
        <div class="col-12">
            <button type="submit" class="btn btn-primary">Create </button>
        </div>
    </form>
</div>



@section Scripts{
    <script src="https://cdn.ckeditor.com/4.20.1/standard/ckeditor.js"></script>

    <script>
        CKEDITOR.replace('editor1');
    </script>
}