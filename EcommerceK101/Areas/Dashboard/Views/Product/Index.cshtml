@model List<EcommerceK101.Models.Product>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
            <a href="/dashboard/Product/Create">Create</a>
        </h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>#Id</th>
                        <th>Photo</th>
                        <th>Name</th>
                        <th>Price </th>
                        <th>Discount</th>
                        <th>Category</th>
                        <th>
                            Parametr
                        </th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>#Id</th>
                        <th>Photo</th>
                        <th>Name</th>
                        <th>Price </th>
                        <th>Discount</th>
                        <th>Category</th>
                        <th>
                            Parametr
                        </th>
                    </tr>
                </tfoot>
                <tbody>

                    @foreach (var pr in Model)
                    {
                        <tr>
                            <th>
                                @pr.Id
                            </th>
                            <th class="w-25">
                                <img src="@pr.PhotoUrl" class="w-25" />
                            </th>
                            <th>
                                @pr.Name
                            </th>
                            <th>
                                @pr.Price
                            </th>
                            <th>@pr.Discount</th>
                            <th>
                                @pr.Category.CategoryName
                            </th>   
                            <th>
                                <a href="/dashboard/Product/Delete/@pr.Id" class="btn btn-danger">Delete</a>
                                <a href="/dashboard/Product/Update/@pr.Id" class="btn btn-success">Edit</a>
                                <a href="/dashboard/Product/Detail/@pr.Id" class="btn btn-primary">Detail</a>
                            </th>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
