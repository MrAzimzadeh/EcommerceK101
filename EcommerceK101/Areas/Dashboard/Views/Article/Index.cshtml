@model IEnumerable<Article>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
            <a href="/dashboard/Article/Create">Create</a>
        </h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>#Id</th>
                        <th>image</th>
                        <th>Title</th>
                        <th>Author</th>
                       
                        <th>Tags</th>
                        <th>Status</th>
                        <th>
                            Parametr
                        </th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>#Id</th>
                        <th>image</th>
                        <th>Title</th>
                        <th>Author</th>
                        
                        <th>Tags</th>
                        <th>Status</th>
                        <th>
                            Parametr
                        </th>
                    </tr>
                </tfoot>
                <tbody>

                    @foreach (var pr in Model)
                    {
                        <tr>
                            <th>
                                @pr.Id
                            </th>
                            <th class="w-25">
                                <img src="@pr.PhotoUrl" class="w-25" />
                            </th>
                            <th>
                                @pr.Title
                            </th>
                            <th>
                                @pr.User.Name
                            </th>
                            <th>
                                @foreach (var tags in pr.ArticleTags)
                                {
                                    <span class="badge badge-primary">
                                        @tags.Tag.Name
                                    </span>
                                }
                            </th>
                            <th>
                                @if (pr.IsDeleted == true)
                                {
                                    <button class="btn btn-primary">
                                        Silinib
                                    </button>

                                }
                                else if (pr.IsDeleted == false)
                                {
                                    @if (pr.IsActive == true)
                                    {
                                        <button class="btn btn btn-success">
                                            active
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="btn btn btn-Warning">
                                            DeActive
                                        </button>
                                    }

                                }
                            </th>
                            <th>
                                <a href="/dashboard/Article/Delete/@pr.Id" class="btn btn-danger">Delete</a>
                                <a href="/dashboard/Article/Update/@pr.Id" class="btn btn-success">Edit</a>
                                <a href="/dashboard/Article/Detail/@pr.Id" class="btn btn-primary">Detail</a>
                            </th>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
