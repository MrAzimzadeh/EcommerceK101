@model Team

<div class="col-lg-6 m-auto">
    <div class="card shadow p-3 mb-4">
        <form method="post" asp-controller="Teaam" asp-action="Create" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Name">Full Name </label>
                <input id="Icon" class="form-control" type="text" asp-for="Name" />
            </div>

            <div class="col-md-2">
                <input type="file" class="form-control" name="Photo" />
            </div>
            <div class="col-md-4">
                <label asp-for="PositionId" class="form-label">Position</label>
                <select asp-for="PositionId" asp-items="@ViewBag.positions" class="form-select">
                    <option value="">Sec</option>
                </select>
            </div>
            <div class="col-md-12">

                @foreach (var item in ViewData["socials"] as List<SocialNetwork>)
                {
                    <div class="d-flex">
                        <input type="hidden" name="socialId" value="@item.Id" />
                        <span>@item.BaseUrl</span> <input name="socialUrl" class="form-control"/>
                    </div>
                }

            </div>

            <div class="form-group">
                <input class="btn btn-outline-success btn-sm" type="submit" value="Submit" />
            </div>

        </form>
    </div>
</div>